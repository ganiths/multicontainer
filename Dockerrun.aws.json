{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
    {
        "name": "client",
        "image":  "ganiths/multi-client",
        "hostname": "client",
        "essential": false
    },
    {
        "name": "server",
        "image":  "ganiths/multi-server",
        "hostname": "api",
        "essential": false
    },
    {
        "name": "worker",
        "image":  "ganiths/multi-worker",
        "hostname": "worker",
        "essential": false
    },
    {
        "name": "nginx",
        "image":  "ganiths/multi-nginx",       
        "essential": true,
        "portMappings":[
            {
                "hostPort": 80,
                "containerPort": 80
            }
        ],
        "links": ["client", "server"]
    }
    ]

}